{
  "name": "work-ledger",
  "version": "1.0.0",
  "description": "Simple activity tracker for daily productivity",
  "main": "public/index.html",
  "scripts": {
    "dev": "npx http-server public -p 3000 -o",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run concat-css",
    "build:js": "npm run concat-js",
    "concat-css": "cat src/css/main.css src/css/themes/*.css src/css/components/*.css > public/styles.css",
    "concat-js": "cat src/js/utils/*.js src/js/modules/*.js src/js/app.js > public/app.js",
    "test": "jest",
    "lint": "eslint src/",
    "deploy": "vercel --prod",
    "preview": "vercel"
  },
  "keywords": ["productivity", "time-tracker", "pwa", "mobile-app"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "http-server": "^14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/work-ledger.git"
  },
  "homepage": "https://work-ledger.vercel.app"
}
