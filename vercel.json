{
  "version": 2,
  "name": "work-ledger",
  "regions": ["iad1", "sfo1"],
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/service-worker.js",
      "dest": "/public/sw.js",
      "headers": {
        "Service-Worker-Allowed": "/"
      }
    }
    // ... baki routes same
  ],
  "headers": [
    // ... same headers
  ],
  "redirects": [
    // ... same redirects
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/404.html"
    }
  ],
  "functions": {
    "public/index.html": {
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "VITE_APP_NAME": "Work Ledger",
      "VITE_VERSION": "1.0.0",
      "VITE_DESCRIPTION": "Simple activity tracker for daily productivity"
    }
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "outputDirectory": "public",
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "silent": true
  }
}
